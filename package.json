{
  "name": "react-easy-loaders",
  "version": "1.0.3",
  "description": "A fully customizable React loader toolkit with theming, overlays, registry, and createLoader API.",
  "license": "MIT",
  "author": "Devesh Lashkari",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --dts --format cjs,esm --sourcemap --clean",
    "dev": "npm run demo:dev",
    "prepublishOnly": "npm run build",
    "demo:install": "cd demo && npm install",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "demo:preview": "cd demo && npm run preview",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist demo/dist",
    "release": "npm run build && npm test && npm publish"
  },
  "peerDependencies": {
    "react": ">=17 || >=18",
    "react-dom": ">=17 || >=18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.4.1",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "react",
    "loader",
    "spinner",
    "progress",
    "overlay",
    "lottie",
    "registry",
    "theming"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deveshlashkari/react-easy-loaders.git"
  },
  "bugs": {
    "url": "https://github.com/deveshlashkari/react-easy-loaders/issues"
  },
  "homepage": "https://deveshlashkari.github.io/react-easy-loaders"
}
